    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".app.APP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TransTheme" >

        <!-- 数据库 -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="God.db" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.ant.jobgod.jobgod.model.PersonAttention,com.ant.jobgod.jobgod.model.PersonBrief" />

        <!-- 高德 -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="10de4b30c7d4e687ccbd56c1cf24cd3a" />

        <!-- 友盟 -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="54cb25c5fd98c5b244000026" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="Channel ID" />
        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="ae762f0449f100e542ba611f1e318a77" />

        <activity
            android:name=".module.launch.LaunchActivity"
            android:theme="@style/LaunchTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.launch.UserLoginActivity"
            android:label="登陆" >
        </activity>
        <activity
            android:name=".module.launch.AgreementActivity"
            android:label="使用条款" />
        <activity
            android:name=".module.launch.UserRegisterActivity"
            android:label="注册" />
        <activity
            android:name=".module.launch.ModifyPasswordActivity"
            android:label="修改密码" />
        <activity
            android:name=".module.main.UserMainActivity"
            android:label="诚客兼职"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".module.job.JobDetailManActivity" >
        </activity>
        <activity
            android:name=".module.setting.SettingActivity"
            android:label="设置" />

        <activity
            android:name=".module.user.UserDetailActivity"
            android:label="@string/title_activity_user_detail" >
        </activity>
        <activity
            android:name=".module.job.TopicDetailActivity"
            android:label="@string/title_activity_topic_detail" >
        </activity>

        <activity
            android:name=".module.user.AttentionActivity"
            android:label="@string/title_activity_attention" >
        </activity>
        <activity
            android:name=".module.job.JobDetailReleaseActivity"
            android:label="@string/title_activity_job_detail_release_mode" >
        </activity>
        <activity
            android:name=".module.user.ModifyInfoActivity"
            android:label="基本资料" >
        </activity>
        <activity
            android:name=".module.user.ModifyUserIntroActivity"
            android:label="@string/title_activity_modify_user_intro" >
        </activity>
        <activity
            android:name=".module.user.ModifyFaceActivity"
            android:label="@string/title_activity_modify_face_acitivity" >
        </activity>
        <activity
            android:name=".module.user.ModifyPhoneActivity"
            android:label="@string/title_activity_modify_phone_acitvity" >
        </activity>
        <activity android:name=".module.user.AuthenticationActivity"
            android:label="实名认证"/>

        <activity android:name=".module.main.joblist.FiltrateActivity"
            android:label="偏好设置"/>

        <activity android:name=".module.job.TopicListActivity"
            android:label="专题列表"/>

        <activity android:name=".module.job.RecommendActivity"
            android:label="推荐列表"/>

        <activity android:name=".module.user.ModifyDataActivity"
            android:label="修改信息"/>

        <activity android:name=".module.main.PersonDetailActivity"
            android:label="信息列表"/>

        <activity android:name=".module.user.CollectActivity"
            android:label="收藏列表"/>



        <!--ImageTool-->
        <activity
            android:name="com.ant.jobgod.imagetool.imageprovider.net.NetImageSearchActivity"
            android:label="搜索图片">
        </activity>
        <activity
            android:name="com.ant.jobgod.imagetool.photoview.ImageViewActivity"
            android:label="查看图片"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            >
        </activity>
        <activity
            android:name="com.ant.jobgod.imagetool.corpimage.CropImage"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>

        <!-- 分享及第三方登陆 -->
        <!-- 分享编辑页 -->
        <activity
            android:name="com.umeng.socialize.view.ShareActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@style/Theme.UMDialog"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>

        <!-- ############ QQ空间和QQ SSO授权的Activity注册 ############ -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- 100424468，如果你使用的公用账号，则不需要修改；否则修改成你在QQ开放平台申请的 APP ID -->
                <data android:scheme="tencent1104599783" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <!-- 友盟推送 -->
        <receiver
            android:name="com.umeng.message.NotificationProxyBroadcastReceiver"
            android:exported="false"
            android:process=":push" >
        </receiver>
        <receiver
            android:name="com.umeng.message.SystemReceiver"
            android:process=":push" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.umeng.message.MessageReceiver"
            android:process=":push" >
            <intent-filter>
                <action android:name="org.agoo.android.intent.action.RECEIVE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.umeng.message.ElectionReceiver"
            android:process=":push" >
            <intent-filter>
                <action android:name="org.agoo.android.intent.action.ELECTION_RESULT_V4" />

                <category android:name="umeng" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.umeng.message.RegistrationReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.ant.jobgod.jobgod.intent.action.COMMAND" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.umeng.message.UmengMessageBootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- 可以根据需要自行设置 android:label 中的服务名 ： -->
        <service
            android:name="com.umeng.message.UmengService"
            android:exported="true"
            android:label="PushService"
            android:process=":push" >
            <intent-filter>
                <action android:name="com.ant.jobgod.jobgod.intent.action.START" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.ant.jobgod.jobgod.intent.action.COCKROACH" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.agoo.android.intent.action.PING_V4" />

                <category android:name="umeng" />
            </intent-filter>
        </service>
        <service
            android:name="com.umeng.message.UmengIntentService"
            android:process=":push" />
        <service
            android:name="com.umeng.message.UmengMessageIntentReceiverService"
            android:exported="true"
            android:process=":push" >
            <intent-filter>
                <action android:name="org.android.agoo.client.MessageReceiverService" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.android.agoo.client.ElectionReceiverService" />
            </intent-filter>
        </service>
        <!-- V1.3.0添加的service，负责下载通知的资源 -->
        <service android:name="com.umeng.message.UmengDownloadResourceService" />

        <!-- 自动更新 -->
        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService" >
        </service>

        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <!-- 有米AD-->
        <activity
            android:name="net.youmi.android.AdBrowser"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <service
            android:name="net.youmi.android.AdService" >
        </service>
        <receiver
            android:name="net.youmi.android.AdReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
