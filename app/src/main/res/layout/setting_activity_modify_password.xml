<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ant.jobgod.jobgod.module.setting.ModifyPasswordActivity">

    <include layout="@layout/include_toolbar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="电话"/>

    </android.support.design.widget.TextInputLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnSendCode"
            android:layout_margin="16dp">

        <EditText android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="验证码"/>
        </android.support.design.widget.TextInputLayout>

        <Button android:id="@+id/btnSendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignBottom="@+id/tilCode"
            android:textColor="@color/accent_material_light"
            android:text="发送验证码"/>

    </RelativeLayout>

    <Button android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:text="确定"
        android:textColor="@color/accent_material_light"/>


</LinearLayout>
