<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="48dp"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imgFace"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    fresco:roundAsCircle="true"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:failureImage="@mipmap/error"
                    fresco:progressBarImage="@mipmap/progress_bar"
                    />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hint_foreground_material_light"
                            android:textStyle="bold"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:text="个人资料"
                            android:textSize="@dimen/abc_text_size_medium_material"/>

                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView android:id="@+id/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="完善度"/>

                        <TextView android:id="@+id/percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/a"
                            android:layout_marginLeft="16dp"
                            android:layout_alignBottom="@+id/a"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="20%"/>
                    </RelativeLayout>
                </LinearLayout>

                    <TextView android:id="@+id/modifyInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="修改"
                        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                        android:textColor="?colorPrimary"/>

            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_bound"
                    />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="绑定手机号"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="18983679028"/>

                    </RelativeLayout>
                </LinearLayout>

                <TextView android:id="@+id/modifyPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="修改"
                    android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                    android:textColor="?colorPrimary"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="56dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="实名认证"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                        <TextView android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="未认证"/>

                </LinearLayout>

                <TextView android:id="@+id/realName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="立即认证"
                    android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                    android:textColor="?colorPrimary"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="72dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:text="修改密码"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                <TextView android:id="@+id/modifyPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="立即修改"
                    android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                    android:textColor="?colorPrimary"/>

            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_energy"
                    />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:text="能力等级"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                        <ProgressBar
                            android:id="@+id/progerssAbility"
                            android:layout_width="200dp"
                            android:layout_height="24dp"
                            android:max="100"
                            android:progress="40"
                            style="?android:attr/progressBarStyleHorizontal"/>

                </LinearLayout>

            </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="56dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="信用等级"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                    <ProgressBar
                        android:id="@+id/progerssIntegrity"
                        android:layout_width="200dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:max="100"
                        android:progress="40"
                        style="?android:attr/progressBarStyleHorizontal"/>

                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="72dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:text="态度等级"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                    <ProgressBar
                        android:id="@+id/progerssAttitude"
                        android:layout_width="200dp"
                        android:layout_height="24dp"
                        android:max="100"
                        android:progress="40"
                        style="?android:attr/progressBarStyleHorizontal"/>

                </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:background="@color/md_divider_black"/>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@style/Title.Expanded"
            app:collapsedTitleTextAppearance="@style/Title.collapsed"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgBgFace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                fresco:failureImage="@mipmap/error"
                fresco:progressBarImage="@mipmap/progress_bar"
                app:layout_collapseMode="parallax"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/main_drawer_gradient"
                />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:theme="@style/AppThemeDark"
                >
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_edit_w"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>