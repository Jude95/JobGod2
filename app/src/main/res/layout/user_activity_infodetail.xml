<?xml version="1.0" encoding="utf-8"?>
< LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:text="姓名"/>

                <TextView android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:text="林龙鑫"/>

            </RelativeLayout>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>

            <RelativeLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:text="个人资料"/>

                <TextView android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:text="完善度 20%"/>

            </RelativeLayout>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>

                <RelativeLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical">

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:text="绑定手机号"/>

                    <TextView android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:text="18983679028"/>

                </RelativeLayout>


            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>

            <RelativeLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:text="实名认证"/>

                <TextView android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:text="未认证"/>

            </RelativeLayout>





            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="72dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:text="实名认证"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                <TextView android:id="@+id/authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="未认证"
                    android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                    android:textColor="?colorPrimary"/>

            </LinearLayout>


            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_energy"
                    />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:text="能力等级"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                        <ProgressBar
                            android:id="@+id/progerssAbility"
                            android:layout_width="200dp"
                            android:layout_height="24dp"
                            android:max="100"
                            android:progress="40"
                            style="?android:attr/progressBarStyleHorizontal"/>

                </LinearLayout>

            </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="56dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="信用等级"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                    <ProgressBar
                        android:id="@+id/progerssIntegrity"
                        android:layout_width="200dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:max="100"
                        android:progress="40"
                        style="?android:attr/progressBarStyleHorizontal"/>

                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="72dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:text="态度等级"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                    <ProgressBar
                        android:id="@+id/progerssAttitude"
                        android:layout_width="200dp"
                        android:layout_height="24dp"
                        android:max="100"
                        android:progress="40"
                        style="?android:attr/progressBarStyleHorizontal"/>

                </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:background="@color/md_divider_black"/>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    </LinearLayout>