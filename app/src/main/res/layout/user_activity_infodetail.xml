                        <TextView android:id="@+id/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="资料完善"/>

                        <TextView android:id="@+id/percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/a"
                            android:layout_marginLeft="16dp"
                            android:layout_alignBottom="@+id/a"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="20%"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView android:id="@+id/modifyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="修改"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="?colorPrimary"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_foreground_material_light"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="修改资料"
                        android:textSize="@dimen/abc_text_size_medium_material"/>

                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView android:id="@+id/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="资料完善"/>

                        <TextView android:id="@+id/percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/a"
                            android:layout_marginLeft="16dp"
                            android:layout_alignBottom="@+id/a"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:text="20%"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView android:id="@+id/modifyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="修改"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="?colorPrimary"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_divider_black"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
