<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/White"
            >
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/vpgBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:hint_mode="point"
                app:hint_alpha="0"
                app:autoplay="3000"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/White">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="专题推荐"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvTopicMore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="更多"
                    android:textColor="?attr/colorPrimary"/>
            </LinearLayout>
            <com.ant.jobgod.jobgod.module.main.recommend.TopicsView
                android:id="@+id/viewTopic"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:layout_height="160dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/White"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="品质推荐"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvRecommendMore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/DeepOrange"
                    android:gravity="center_vertical"
                    android:text="更多"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_divider_height"
                android:background="@color/md_divider_black"
                android:layout_marginTop="40dp"/>

            <com.ant.jobgod.jobgod.widget.LinearWrapContentRecyclerView
                android:id="@+id/listRecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/White"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="专题推荐"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvAdMore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="更多"
                    android:textColor="?attr/colorPrimary"/>
            </LinearLayout>

            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/vpgAd"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:hint_mode="point"
                app:hint_alpha="0"
                app:autoplay="3000"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>