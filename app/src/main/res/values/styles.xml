<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--主色-->
        <item name="colorPrimary">@color/DeepOrange</item>
        <!--深色主色-->
        <item name="colorPrimaryDark">@color/DeepOrange900</item>
        <!--醒目主色-->
        <item name="colorAccent">@color/Grange</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="TransTheme" parent="AppTheme">
        <!--窗体透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/launch_bg</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--主色-->
        <item name="colorPrimary">@color/DeepOrange</item>
        <!--深色主色-->
        <item name="colorPrimaryDark">@color/DeepOrange900</item>
        <!--醒目主色-->
        <item name="colorAccent">@color/Grange</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="Title.Expanded" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Title.collapsed" parent="Title">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SwipeBackLayout">
        <item name="edge_size">150dp</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="theme">@style/AppThemeDark</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

</resources>
